%タイトル
\newcommand{\tackTitle}[1]{%
 \newcommand{\goTitle}{%
  \begin{minipage}[t]{180mm}%
   \begin{center} {\LARGE \bf #1} \end{center}%
  \end{minipage}%
 }%
}%

%著者情報・指導教員
\newcommand{\tackAuthor}[5]{%
 \newcommand{\goAuthor}{%
\begin{minipage}[t]{\textwidth}%
   \begin{center}
    {
      \large #3 研究室\hskip 2.0zw%
       学籍番号\hskip 1.0zw #1\hskip 1.0zw%
       #2\hskip 2.0zw%
       指導教員\hskip 1.0zw #3\hskip 0.5zw #4\hskip 1.0zw #5
    }
   \end{center}%
  \end{minipage}%
 }%
}%
